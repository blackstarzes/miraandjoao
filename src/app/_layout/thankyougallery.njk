{% extends "thankyou.njk" %}

{% block gallery %}
<tr>
    <td style="background-color: #ffffff;">
        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
            <tr>
                <td style="padding: 0 20px 20px 20px;">
                    <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: auto;">
                        <tr>
                            <td class="button-td button-td-primary" style="border-radius: 4px; background: #880903;">
                                <a class="button-a button-a-primary" href="https://miraandjoao.com/?utm_source=<%= email.tokens.source %>&utm_medium=email&utm_campaign=<%= email.tokens.campaign %>&utm_content=ctagallery&ut=<%= email.tokens.usertag %>#gallery" style="background: #880903; border: 1px solid #880903; font-family: 'Amatic SC', sans-serif; font-size: 15px; line-height: 15px; text-decoration: none; padding: 13px 17px; color: #ffffff; display: block; border-radius: 4px;"><%= email.thankyou.cta %></a>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </td>
</tr>
<tr>
    <td style="background-color: #ffffff;">
        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
            <tr>
                <td style="padding: 20px; font-family: sans-serif; font-size: 15px; line-height: 20px; text-align:center; color: #555555;">
                    <p style="margin: 0; font-family: sans-serif;"><%= email.thankyou.ctamessage %></p>
                </td>
            </tr>
        </table>
    </td>
</tr>
{% endblock %}
