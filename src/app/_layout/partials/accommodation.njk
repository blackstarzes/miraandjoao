<section id="accommodation" class="dark">
    <div class="section-heading">
        <h1><%= accommodation.title %></h1>
    </div>
    <div class="container">
        <div id="accommodationProvided" class="row accommodation-provided-hidden">
            <div class="col-12">
                <p>
                    <%= accommodation.accommodationProvided %>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h2><%= accommodation.receptionVenue %></h2>
            </div>
        </div>
        <div class="card mb-4">
            <a href="https://vilavitaparc.com/" target="_blank">
                <img class="card-img-top img-fluid" src="/img/accommodation-vila-vita-parc.jpg">
            </a>
            <div class="card-body">
                <h4 class="card-title"><%= wedding.reception.name %></h4>
                <p>
                    <i class="fas fa-map-marker-alt fa-fw"></i>
                    <%= wedding.reception.location %>
                </p>
                <p class="card-text"><%= accommodation.receptionDescription %></p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <small class="text-muted">
                            <div class="container text-muted">
                                <div class="row">
                                    <div class="col-6">
                                        <%= accommodation.ceremony %>
                                    </div>
                                    <div class="col-6">
                                        <%= accommodation.reception %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <i class="fas fa-walking fa-fw"></i>
                                        1 <%= accommodation.hour %>
                                    </div>
                                    <div class="col-6">
                                        <i class="fas fa-walking fa-fw"></i>
                                        0 <%= accommodation.minutes %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <i class="fas fa-car  fa-fw"></i>
                                        10 <%= accommodation.minutes %>
                                    </div>
                                    <div class="col-6">
                                        <i class="fas fa-car  fa-fw"></i>
                                        0 <%= accommodation.minutes %>
                                    </div>
                                </div>
                            </div>
                        </small>
                    </li>
                </ul>
            </div>
            <div class="card-footer">
                <a href="mailto:rpimentel@vilavitaparc.com?subject=Accommodation%20enquiry%20for%20Mira%20and%20Joao%27s%20wedding%20-%2011%20October%202019" target="_blank" class="card-link">
                    <i class="fas fa-envelope fa-fw"></i>
                    <%= accommodation.enquire %>
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="container">
        <hr>
        <div class="row">
            <div class="col-12">
                <h2><%= accommodation.suggestedHotels %></h2>
                <p><%= accommodation.suggestedHotelsDescription %></p>
            </div>
        </div>
        <div class="card-deck">
            <div class="card mb-4">
                <a href="https://www.pestana.com/en/hotel/pestana-viking" target="_blank">
                    <img class="card-img-top img-fluid" src="/img/accommodation-pestana-viking.jpg">
                </a>
                <div class="card-body">
                    <h4 class="card-title"><%= accommodation.pestanaViking.title %></h4>
                    <p>
                        <i class="fas fa-map-marker-alt fa-fw"></i>
                        <%= accommodation.pestanaViking.address %>
                    </p>
                    <p class="card-text"><%= accommodation.pestanaViking.description %></p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <small class="text-muted">
                                <div class="container text-muted">
                                    <div class="row">
                                        <div class="col-6">
                                            <%= accommodation.ceremony %>
                                        </div>
                                        <div class="col-6">
                                            <%= accommodation.reception %>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <i class="fas fa-walking fa-fw"></i>
                                            1 <%= accommodation.hour %>
                                        </div>
                                        <div class="col-6">
                                            <i class="fas fa-walking fa-fw"></i>
                                            15 <%= accommodation.minutes %>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <i class="fas fa-car  fa-fw"></i>
                                            10 <%= accommodation.minutes %>
                                        </div>
                                        <div class="col-6">
                                            <i class="fas fa-car  fa-fw"></i>
                                            5 <%= accommodation.minutes %>
                                        </div>
                                    </div>
                                </div>
                            </small>
                        </li>
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="mailto:bookings@ecoviagens.pt?subject=Accommodation%20enquiry%20for%20Mira%20and%20Joao%27s%20wedding%20-%2011%20October%202019" target="_blank" class="card-link">
                        <i class="fas fa-envelope fa-fw"></i>
                        <%= accommodation.enquire %>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            </div>
            <div class="w-100 d-none d-sm-block d-md-none"><!-- wrap every 1 on sm--></div>
            <div class="card mb-4">
                <a href="https://www.vilagale.com/en/hotels/algarve/vila-gale-nautico" target="_blank">
                    <img class="card-img-top img-fluid" src="/img/accommodation-vila-gale-nautico.jpg">
