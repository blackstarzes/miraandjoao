                    <i class="fas fa-clock fa-fw"></i>
                    <%= wedding.ceremony.date %>
                </p>
                <p>
                    <%= wedding.ceremony.description %>
                </p>
                <p>
                    <a href="https://www.google.com/maps/search/?api=1&query=Church+of+Our+Lady+of+the+Incarnation,+Porches,+Portugal" target="_blank">
                        <%= wedding.seeLocation %>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </p>
            </div>
        </div>
        <div class="row top50">
            <div class="col-md-6 col-12">
                <img src="/img/reception.jpg" class="img-fluid"/>
            </div>
            <div class="col-md-6 col-12 wedding-content">
                <h2><%= wedding.reception.title %></h2>
                <h3 class="calligraphy"><%= at %> <%= wedding.reception.name %></h3>
                <p>
                    <i class="fas fa-map-marker-alt fa-fw"></i>
                    <%= wedding.reception.location %>
                </p>
                <p>
                    <i class="fas fa-clock fa-fw"></i>
                    <%= wedding.reception.date %>
                </p>
                <p>
                    <%= wedding.reception.description %>
                </p>
                <p>
                    <a href="https://www.google.com/maps/search/?api=1&query=Vila+Vita+Parc,+Porches,+Portugal" target="_blank">
                        <%= wedding.seeLocation %>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>
</section>
