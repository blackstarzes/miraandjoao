{% extends "email.njk" %}

{% block title %}<%= email.reminder.title %>{% endblock %}

{% block preview %}<%= email.reminder.preview %>{% endblock %}

{% block image %}https://miraandjoao.com/img/miraandjoao.jpg{% endblock %}

{% block year %}2019{% endblock %}

{% block content %}
<tr>
    <td style="background-color: #ffffff;">
        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
            <tr>
                <td align="center" style="padding: 20px; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #555555;">
                    <h1 style="margin: 0 0 10px 0; font-family: 'Great Vibes', 'Marck Script', cursive, sans-serif; font-size: 25px; line-height: 30px; color: #333333; font-weight: normal;"><%= email.reminder.salutation %></h1>
                    <p style="margin: 0; font-family: 'Amatic SC', sans-serif;"><%= email.reminder.message %></p>
                </td>
            </tr>
            <tr>
                <td style="padding: 0 20px 20px 20px;">
                    <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: auto;">
                        <tr>
                            <td class="button-td button-td-primary" style="border-radius: 4px; background: #880903;">
                                <a class="button-a button-a-primary" href="https://miraandjoao.com/?utm_source=<%= email.tokens.source %>&utm_medium=email&utm_campaign=<%= email.tokens.campaign %>&utm_content=cta&ut=<%= email.tokens.usertag %>" style="background: #880903; border: 1px solid #880903; font-family: 'Amatic SC', sans-serif; font-size: 15px; line-height: 15px; text-decoration: none; padding: 13px 17px; color: #ffffff; display: block; border-radius: 4px;"><%= email.reminder.cta %></a>
                            </td>
                        </tr>
                    </table>
                    <p style="display: none"></p>
                </td>
            </tr>
        </table>
    </td>
</tr>

<!-- 2 Even Columns : BEGIN -->
<tr>
    <td height="100%" valign="top" width="100%" style="padding: 0 10px 10px 10px; background-color: #ffffff;">
        <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width:560px;">
            <tr>
                <td valign="top" width="50%">
                    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="font-size: 14px; text-align: left;">
                        <tr>
                            <td style="text-align: center; padding: 0 10px;">
                                <p style="font-family: 'Amatic SC', sans-serif; font-weight: bold; margin: 0;"><%= email.reminder.where %></p>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: center; font-family: 'Amatic SC', sans-serif; font-size: 15px; line-height: 20px; color: #555555; padding: 10px 10px 0;">
                                <p style="margin: 0;"><%= email.reminder.algarvePortugal %></p>
                            </td>
                        </tr>
                    </table>
                </td>
                <td valign="top" width="50%">
                    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="font-size: 14px; text-align: left;">
                        <tr>
                            <td style="text-align: center; font-family: 'Amatic SC', sans-serif; padding: 0 10px;">
                                <p style="font-weight: bold; margin: 0;"><%= email.reminder.when %></p>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: center; font-family: 'Amatic SC', sans-serif; font-size: 15px; line-height: 20px; color: #555555; padding: 10px 10px 0;">
                                <p style="margin: 0;"><%= email.reminder.weddingDate %></p>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </td>
</tr>
<tr>
    <td style="background-color: #ffffff;">
        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
            <tr>
                <td align="center" style="padding: 20px; font-family: 'Great Vibes', 'Marck Script', cursive, sans-serif; font-size: 15px; line-height: 20px; color: #555555;">
                    <p style="margin: 0;"><%= email.reminder.invitationsToFollow %></p>
                </td>
            </tr>
        </table>
    </td>
</tr>
{% endblock %}
